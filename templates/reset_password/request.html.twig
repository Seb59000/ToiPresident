{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}

{% block body %}
	<div class="section-inner ">
		{% for flashError in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}
		<h1>Réinitialisation du mot de passe</h1>
		<br>

		{{ form_start(requestForm) }}
		<div>
			<h5 class="section-subheading secondary-font">
				Entrez votre adresse mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
			</h5>
		</div>
		{{ form_widget(requestForm.email) }}
		<button class="btn btn-primary">Envoyer le mail</button>
		{{ form_end(requestForm) }}
	</div>
{% endblock %}
